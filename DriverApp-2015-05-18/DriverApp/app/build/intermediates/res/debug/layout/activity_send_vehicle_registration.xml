<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inovatives.driverapp.SendVehicleRegistration"
    android:background="@color/start_background_color">

   <ScrollView

       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@color/start_background_color"
       android:layout_centerInParent="true">
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
         android:focusableInTouchMode="true"
         >

         <TextView
             android:id="@+id/text_vehicle_choose"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/vehicle_choose_header"
             android:textSize="@dimen/activity_text_size"
             android:textColor="@color/text_color"/>

           <Spinner
               android:id="@+id/vehicles_spinner"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:entries="@array/registration_vehicle_array"

             />

         <TextView
             android:id="@+id/lbl_vehicle_registration_header"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/vehicle_registration_header"
             android:textSize="@dimen/activity_text_size"
             android:layout_marginTop="@dimen/activity_textbox_vertical_space"
             android:textColor="@color/text_color"/>


         <AutoCompleteTextView
             android:id="@+id/text_vehicle"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/textbox_background"
             android:hint="@string/vehicle_registration_header"/>

         <Button
             android:id="@+id/btnSelectVehicle"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/select_vehicle"
             android:textColor="@color/splash_text_color"
             android:layout_marginTop="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:background="@drawable/button_background"
             android:onClick="goEmergency"
             />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
